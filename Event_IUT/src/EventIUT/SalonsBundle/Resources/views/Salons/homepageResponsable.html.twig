{% extends "::vueMere.html.twig" %} {#La vue fille 1 hérite de la vue mère #}
{% block menu %} 

				<div class="row">
					<div class="col-sm-3">
					</div>					
				
					<div class="col-sm-4">
                               
								<div class="form-group">
                                    <div class="input-group input-group-md icon-addon">
                                        <input type="text" placeholder=" Recherche par nom de salon" name="" id="schbox" class="form-control">
                                        <i class="icon icon-search"></i>
                                        <span class="input-group-btn">
                                            <button type="submit" class="btn btn-inverse">Rechercher</button>
                                        </span>
                                    </div>
								</div>	
					</div>
					
				
					<div class="col-sm-2">
						<a button class="btn btn-primary" href="{{ path('event_iut_salons_dashboard')}}">Tableau de bord <span class="badge">0</span></a button>
					</div>		
					
					<div class="col-sm-3">
					</div>							
				</div>

				<br>

				
				
				
				<div class="row">
					<div class="col-sm-12">
												
								<!-- Nav tabs -->
								<ul class="nav nav-tabs">
										<li class="active"><a href="#aVenir" data-toggle="tab">Salons à venir</a></li>
										<li><a href="#passes" data-toggle="tab">Salons passés</a></li>
								</ul>
								<!-- Tab panes -->
					<div class="tab-content">
										<div id="aVenir" class="tab-pane fade in active">
											<table class="table">
												<tr>
													<td><strong>Nom  <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></strong></td>
													<td><strong>Date de début  <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></strong></td>
													<td><strong>Date de fin </strong></td>
													<td><strong>Lieu  <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></strong></td>
													<td><strong>Horaire</strong></td>
													<td><strong>Fin d'inscription</strong></td>
													<td><strong>Inscrits</strong></td>
													<td><strong>En attente</strong></td>	
													<td><strong></strong></td>																
												</tr>
												{% for salonCourant in tabSalonsAVenir%}
												<tr>
													<td>{{salonCourant.nom}}
													</td>
													<td>{% for dateSalon in salonCourant.datesSalon%}
													{{dateSalon.date|date('d-m-Y')}}{% endfor %}
													</td>
													<td>{% for dateSalon in salonCourant.datesSalon%}
													{{dateSalon.date|date('d-m-Y')}}{% endfor %}
													</td>
													<td>{{salonCourant.ville}}
													</td>
													<td>{% for dateSalon in salonCourant.datesSalon%}
													{{dateSalon.heureDebut|date('H:i')}}-{{dateSalon.heureFin|date('H:i')}}{% endfor %}
													</td>
													<td>
													{{salonCourant.dateLimite|date('d-m-Y')}}
													</td>
													<td>4</td>
													<td>0</td>	
													<td><a href="{{ path('event_iut_salons_voirSalons',{'id':salonCourant.id})}}" > <button type="submit" class="glyphicon glyphicon-chevron-right" ></button></a></td>								
												</tr>
												{% endfor %}										
											</table>
										</div>
										
										
										<div id="passes" class="tab-pane fade">
											<table class="table">
												<tr>
													<td><strong>Nom  <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></strong></td>
													<td><strong>Date de début  <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></strong></td>
													<td><strong>Date de fin </strong></td>
													<td><strong>Lieu  <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>  <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></strong></td>
													<td><strong>Horaire</strong></td>
													<td><strong>Fin d'inscription</strong></td>
													<td><strong>Inscrits</strong></td>
													<td><strong>En attente</strong></td>	
													<td><strong></strong></td>																
												</tr>											
												{% for salonCourant in tabSalonsPasse%}
												<tr>
													<td>{{salonCourant.nom}}
													</td>
													<td>{% for dateSalon in salonCourant.datesSalon%}
													        {% if loop.first %}
															{{dateSalon.date|date('d-m-Y')}}
                                                            {% endif %}															
												{% endfor %}
													</td>
													<td>{% for dateSalon in salonCourant.datesSalon%}
													    {% if loop.last %}
													        {{dateSalon.date|date('d-m-Y')}}
															{% endif %}	
													{% endfor %}
													</td>
													<td>{{salonCourant.ville}}
													</td>
													<td>{% for dateSalon in salonCourant.datesSalon%}
													{% if loop.first %}
													{{dateSalon.heureDebut|date('H:i')}}-{{dateSalon.heureFin|date('H:i')}}
													{% endif %}	
													{% endfor %}
													</td>
													<td>
													{%if salonCourant.dateLimite==NULL%}										
										{% else %}
										{{salonCourant.dateLimite|date('d-m-Y')}}
										{% endif %}													
													</td>
													<td>4</td>
													<td>0</td>	
													<td><a href="{{ path('event_iut_salons_voirSalons',{'id':salonCourant.id})}}" > <button type="submit" class="glyphicon glyphicon-chevron-right" ></button></a></td>								
												</tr>
												{% endfor %}											
											</table>										
										</div>
									
								
								<script>// <!&#91;CDATA&#91;
								  $('#myTab a').click(function (e) {
									e.preventDefault()
									$(this).tab('show')
								  })
								// &#93;&#93;>
								</script>
					</div>
				</div>
									
{% endblock %}